@model List<CourseSchedule>
@{
    ViewBag.Title = "title";
}
<div>
    <h1 class="text-center m-4 ">Schedule of Class @ViewBag.Course.CourseCode-@ViewBag.Course.Subject.SubjectCode</h1>
    <table class="table shadow-1-strong table-hover">
        <thead>
        <tr>
            <th>Course</th>
            <th>Subject</th>
            <th>Teaching Date</th>
            <th>Teaching Time</th>
            <th>Slot</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var schedule in @Model)
        {
            <tr>
                <td>@schedule.Course?.CourseCode</td>
                <td>@schedule.Course?.Subject.SubjectCode</td>
                <td>@schedule.TeachingDate?.ToShortDateString()</td>
                <td>@schedule.TeachingDate?.ToShortTimeString()</td>
                <td>@schedule.Slot</td>
                <td>
                    <a href="/RollCallBook/CheckAttendance/@schedule.TeachingScheduleId" class="btn btn-dark">Take Attendance</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>